<%# app/views/reviews/_form.html.erb %>

<%= form_with(model: [ @video, @review ], local: true) do |form| %>
  <style>
    .centered-form-container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh; /* 必要に応じて調整 */
    }

    .centered-form {
      text-align: center;
    }

    .actions {
      margin-top: 20px; /* 必要に応じて調整 */
    }

    .submit-button {
      display: block;
      margin: 0 auto;
      padding: 10px 20px;
      font-size: 16px;
      background-color: #007bff;
      color: #fff;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    .submit-button:hover {
      background-color: #0056b3;
    }
  </style>

  <% if @review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% @review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'wide-text-area' %>
  </div>

  <div class="actions">
    <%= form.submit "更新", class: 'submit-button' %>
  </div>
<% end %>
