<div class="container mt-6">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group text-center">
              <%= f.label :email, t('devise.registrations.new.email'), class: 'form-control-label' %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mx-auto', style: "max-width: 300px;" %>
            </div>
            
            <div class="form-group text-center">
              <%= f.label :name, t('devise.registrations.new.name'), class: 'form-control-label' %><br />
              <%= f.text_field :name, autofocus: true, class: 'form-control mx-auto', style: "max-width: 300px;" %>
            </div>

            <div class="form-group text-center">
              <%= f.label :password, t('devise.registrations.new.password'), class: 'form-control-label' %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> <%= t('devise.registrations.new.characters_minimum') %>)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'form-control mx-auto', style: "max-width: 300px;" %>
            </div>

            <div class="form-group text-center">
              <%= f.label :password_confirmation, t('devise.registrations.new.password_confirmation'), class: 'form-control-label' %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mx-auto', style: "max-width: 300px;" %>
            </div>

            <div class="form-group text-center">
              <%= f.submit t('helpers.submit.create', default: 'Sign up'), class: 'btn btn-primary mx-auto', style: "width: 300px;" %>
            </div>
          <% end %>
        </div>
      </div>

      <%# <div class="text-center mt-4"> %>
        <%# <%= render "devise/shared/links" %> 
      <%# </div> %>

    </div>
  </div>
</div>