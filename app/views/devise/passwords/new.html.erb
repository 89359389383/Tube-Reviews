<h2 style="text-align: center; margin-bottom: 20px;">Forgot your password?</h2>

<div style="display: flex; justify-content: center; align-items: flex-start; min-height: 100vh; padding-top: 20px;">
  <div style="text-align: center; width: 100%; max-width: 500px;">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, style: "text-align: center;" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field" style="margin: 0 auto; text-align: center; margin-bottom: 10px;">
        <%= f.label :email, style: "margin-bottom: 5px;" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "display: block; margin: 0 auto;" %>
      </div>

      <div class="actions" style="margin: 0 auto; text-align: center; margin-top: 10px;">
        <%= f.submit "Send me reset password instructions", style: "display: block; margin: 0 auto;" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
